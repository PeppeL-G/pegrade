<h1>Movies!</h1>

{{#if errorMessages.length}}
	<p>Couldn't fetch the movies because:</p>
	<ul>
		{{#each errorMessages}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
	
{{else}}
	
	{{#if movies.length}}
		<ul>
			{{#each movies}}
				<li>
					<a href="/movies/{{id}}">
						{{title}}
					</a>
					({{grade}}/10)
					
				</li>
			{{/each}}
		</ul>
		
	{{else}}
		<p>We have no movies to recommend at the moment.</p>
	{{/if}}
	
{{/if}}

