<h1>Create</h1>

{{#if errorMessages.length}}
	<p>Couldn't create the movie because:</p>
	<ul>
		{{#each errorMessages}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}

<form action="/movies/create" method="post">
	
	<div>
		Title: <input type="text" name="title" value="{{title}}">
	</div>
	
	<div>
		Grade: <input type="number" name="grade" value="{{grade}}">
	</div>
	
	<input type="submit" value="Create">
	
</form>